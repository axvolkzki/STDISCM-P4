<%= javascript_include_tag('addGrade.js')%>
<%= render 'layouts/navbarFaculty' %>

<div class="courses-title-container">
    <h3>Add Grades </h3>
</div>

<form id="filterForm" action="/filter" method="GET">
<div class="search-container">
    <div class="course-dropdown">
        <div class="container">
            <label for="course-category">select course</label>
            <select id="course-category">
                <option value="all-courses">ALL</option>
                <option value="lcasean">LCASEAN</option>
                <option value="personal">GERIZAL</option>
            </select>
        </div>
    </div>

    <div class="section-dropdown">
        <div class="container">
            <label for="section-category">select course</label>
            <select id="section-category">
                <option value="all-sections">ALL</option>
                <option value="section1">Y14</option>
                <option value="section2">Z14</option>
            </select>
        </div>
    </div>

    <div class="search-box">
        <div class="container">
        <br>
            <input type="text" id="searchBox" placeholder="search student name">
        </div>
    </div>

    <div class="filter-button">
        <br>
        <button type="submit" id="filterButton">Filter</button>
    </div>
</div>
</form>

<div class="drop-courses-container">
    <table>
        <tr>
            <th> Student </th>
            <th> ID Number </th>
            <th> Course </th>
            <th> Section </th>
            <th> Grade </th>
            <th> </th>
        </tr>

        <!-- SAMPLE DATA ONW WHAT ITS SUPPOSED TO LOOK LIKE -->
       <tr>
            <td> Juan Santos </td>
            <td> 12176767 </td>
            <td> GERIZAL </td>
            <td> Y13 </td>
            <td class="grade-cell" data-student-id=1> 4.0 </td>
            <td><button class="addGradeBtn"  data-student-id="1" data-student-name="Juan Santos">edit</button></td>
        </tr>
        <tr>
            <td> Jose Santos </td>
            <td> 12176766 </td>
            <td> GERIZAL </td>
            <td> Y13 </td>
            <td class="grade-cell" data-student-id=2> - </td>
            <td><button class="addGradeBtn" data-student-id="2" data-student-name="Jose Santos">add</button></td>
        </tr>
        
        <%# uncomment to use, remove the #s %>
        <%# @students.each do |student| %>
            <tr>
            <td><%#= student.name %></td>
            <td><%#= student.id_number %></td>
            <td><%#= student.course %></td>
            <td><%#= student.section %></td>
            <td class="grade-cell" data-student-id="<%#= student.id_number %>">
                <%#= student.grade.present? ? student.grade : 'â€”' %>
            </td>
            <td>
                <button 
                class="addGradeBtn" 
                data-student-id="<%#= student.id_number %>" 
                data-student-name="<%#= student.name %>">
                <%#= student.grade.present? ? 'Edit' : 'Add' %>
                </button>
            </td>
            </tr>
      <%# end %>
    </table>

<div class="addGrade-modal" id="gradeModal">
    <div class="modal">
      <h3>Select Grade</h3>
      <select id="gradeSelect">
        <option value="1.0">1.0</option>
        <option value="1.5">1.5</option>
        <option value="2.0">2.0</option>
        <option value="2.5">2.5</option>
        <option value="3.0">3.0</option>
        <option value="3.5">3.5</option>
        <option value="4.0">4.0</option>
        <option value="0.0">0.0</option>
      </select>

      <div class="modal-buttons">
        <button id="confirm-btn" >Confirm</button>
        <button id="cancel-btn" >Cancel</button>
      </div>
    </div>
  </div>
</div>

